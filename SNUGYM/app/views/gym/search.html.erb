<div id="gym-search">
    <div class="left">
        <div class="type">
            운동 종류
        </div>
        <div class="input-type">
            <input list="type" value="헬스" readonly>
        </div>
        <div class="location">
            위치
        </div>
        <div class="input-location">
            <input list="location">
            <datalist id="location">
                <option value="서울대입구역 근처"></option>
                <option value="낙성대역 근처"></option>
                <option value="녹두거리 근처"></option>
            </datalist>
        </div>
        <div class="capacity">
            수용 가능 인원
        </div>
        <div class="input-capacity">
            <input type="integer">
        </div>
        <div class="price">
            가격
        </div>
        <div class="input-price_1m">
            <input type="integer">
        </div>
        <div class="input-price_3m">
            <input type="integer">
        </div>
        <div class="input-price_12m">
            <input type="integer">
        </div>
    </div>  
    <div class="right">
        <div class="running">
            런닝머신
        </div>
        <div class="input-running">
            <input type="text">
        </div>
        <div class="barbell">
            바벨
        </div>
        <div class="input-barbell">
            <input type="text">
        </div>
        <div class="legpress">
            레그 프레스
        </div>
        <div class="input-legpress">
            <input type="text">
        </div>
        <div class="submit">
            <button>
                검색하기
            </button>
        </div>
    </div>
</div>